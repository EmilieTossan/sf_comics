{% extends "admin/base.html.twig" %}
{% block title %}Découvrez la liste des bandes dessinées{% endblock %}

{% block main %}
    <section style="display: flex; justify-content: center; margin-top: 50vh; transform: translateY(-50%)">

        <table style="border-spacing: 5px;">

            <td>
                <tr><h1 style="margin-top: auto; margin-bottom: auto; width:280px">Les bandes dessinées</h1></tr>
            </td>
            <td>
                <tr><hr></tr>
            </td>
            <td>
                <tr>
                    <div style="text-align: center; width:500px">
                        {% for comic in comics %}
                            <p>
                                <img src="{{ asset('media/' ~ comic.images[0].src) }}" alt="{{ comic.images[0].alt }}" title="{{ comic.images[0].title }}" style="vertical-align:middle; width: 150px; margin: 20px; margin-bottom: 30px;">
                                <a href="{{ path('show_comic', {'id' : comic.id }) }}" style="outline: none; text-decoration: none; color: #000; font-size: 16pt">
                                    {{ comic.title }} <span style="color: grey"> - {{ comic.year }}</span>
                                </a>
                            </p>
                            <hr>
                        {% endfor %}
                    </div>
                </tr>
            </td>
        </table>
        
    </section>
{% endblock %}