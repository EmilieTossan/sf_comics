{% extends "admin/base.html.twig" %}
{% block title %}Ajouter un éditeur{% endblock %}

{% block main %}

    {{form_start(editorForm)}}

    <table>
        <tr>
            <td colspan="2"><legend>Ajouter un éditeur :</legend></td>
        </tr>
        <tr>
            <td colspan="2"><hr></td>
        </tr>
        <tr>
            <td style="text-align : end; padding : 5px">{{form_label(editorForm.name, 'Nom de l\'éditeur', {'label_attr' : {'class' : 'label'}})}}</td>
            <td>{{form_widget(editorForm.name, {'attr' : {'size' : '22'}})}}</td>
        </tr>
        <tr>
            <td style="text-align : end; padding : 5px">{{form_label(editorForm.country, 'Pays d\'origine', {'label_attr' : {'class' : 'label'}})}}</td>
            <td>{{form_widget(editorForm.country, {'attr' : {'size' : '22'}})}}</td>
        </tr>
        <tr>
            <td></td>
            <td>{{form_widget(editorForm.Enregistrer, {'attr' : {'class' : 'button'}})}}</td>
        </tr>
    </table>
    
    {{form_end(editorForm)}}

{% endblock %}