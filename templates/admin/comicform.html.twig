{% extends "admin/base.html.twig" %}
{% block title %}Ajouter une bande dessinée{% endblock %}

{% block main %}

    {{form_start(comicForm)}}

    <table>
        <tr>
            <td colspan="2"><legend>Ajouter une bande dessinée :</legend></td>
        </tr>
        <tr>
            <td colspan="2"><hr></td>
        </tr>
        <tr>
            <td style="text-align : end; padding : 5px">{{form_label(comicForm.title, 'Titre', {'label_attr' : {'class' : 'label'}})}}</td>
            <td>{{form_widget(comicForm.title, {'attr' : {'size' : '22'}})}}</td>
        </tr>
        <tr>
            <td style="text-align : end; padding : 5px">{{form_label(comicForm.description, 'Description', {'label_attr' : {'class' : 'label'}})}}</td>
            <td>{{form_widget(comicForm.description, {'attr' : {'class' : 'description_field'}})}}</td>
        </tr>
        <tr>
            <td style="text-align : end; padding : 5px">{{form_label(comicForm.year, 'Année', {'label_attr' : {'class' : 'label'}})}}</td>
            <td>{{form_widget(comicForm.year)}}</td>
        </tr>
        <tr>
            <td style="text-align : end; padding : 5px">{{form_label(comicForm.licence, 'Licence', {'label_attr' : {'class' : 'label'}})}}</td>
            <td>{{form_widget(comicForm.licence)}}</td>
        </tr>
        <tr>
            <td style="text-align : end; padding : 5px">{{form_label(comicForm.editor, 'Éditeur', {'label_attr' : {'class' : 'label'}})}}</td>
            <td>{{form_widget(comicForm.editor)}}</td>
        </tr>
        <tr>
            <td style="text-align : end; padding : 5px">{{form_label(comicForm.writer, 'Auteur', {'label_attr' : {'class' : 'label'}})}}</td>
            <td>{{form_widget(comicForm.writer)}}</td>
        </tr>
        <tr>
            <td style="text-align : end; padding : 5px">{{form_label(comicForm.designer, 'Dessinateur', {'label_attr' : {'class' : 'label'}})}}</td>
            <td>{{form_widget(comicForm.designer)}}</td>
        </tr>
        <tr>
            <td></td>
            <td>{{form_widget(comicForm.Enregistrer, {'attr' : {'class' : 'button'}})}}</td>
        </tr>
    </table>

    {{form_end(comicForm)}}

{% endblock %}